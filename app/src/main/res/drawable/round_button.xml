<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">  <!-- shadow effect -->
        <shape>
            <corners android:radius="17dp" />
            <solid android:color="#29B6F6" />
        </shape>
    </item>

    <item android:bottom="8dp" android:right="8dp" android:left="8dp" android:top="8dp" >  <!-- Button Shape -->
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500"/>
            <corners android:radius="30dp" />

            <padding android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>
            <stroke android:width="3px"
                android:color="#17636363" />
        </shape>
    </item>

</layer-list>