                android:src="@drawable/mndadcolor"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/balon24"
                app:layout_constraintEnd_toStartOf="@+id/balon19"
                app:layout_constraintHorizontal_bias="0.728"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/balon17"
                app:layout_constraintVertical_bias="0.944" />

            <ImageView
                android:id="@+id/balon16"
                android:layout_width="73dp"
                android:layout_height="82dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/mndadcolor"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/balon19"
                app:layout_constraintEnd_toStartOf="@+id/balon15"
