<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/card"
    android:backgroundTint="@color/white"
    app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعديل البيانات"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/ErrorChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ادخل"
            android:layout_marginTop="6dp"
            android:layout_marginRight="90dp"
            android:layout_gravity="right"
            android:textColor="@color/red"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutl"
            android:layout_width="233dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:background="@drawable/card"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/default_shadow_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/EnterChildName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:backgroundTint="#41FFFFFF"
                android:ems="10"
                android:gravity="right"
                android:hint="الإسم الجديد"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.215" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/ErrorChildAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="90dp"
            android:text="ادخل"
            android:textColor="@color/red"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="233dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/card"
            android:backgroundTint="@color/white"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/default_shadow_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutel">


            <EditText
                android:id="@+id/EnterChildAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="right"
                android:hint="العمر الجديد"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonCancle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textColor="@color/textDarkColor"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/yellow"
                android:text="تراجع" />
            <Button
                android:id="@+id/buttonOk"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textColor="@color/textDarkColor"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/yellow"
                android:text="حفظ" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>